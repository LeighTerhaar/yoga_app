<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All poses
    </h1>

    <a href="/poses/new" class="btn btn-block btn-outline-secondary">
      Add a new pose
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "pose_templates/poses_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          English name
        </th>

        <th>
          Sanksrit
        </th>

        <th>
          Sequence
        </th>

        <th>
          Picture
        </th>

        <th>
          Sun a
        </th>

        <th>
          Sun b
        </th>

        <th>
          Sun c
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @poses.each do |pose| %>
      <tr>
        <td>
          <%= pose.id %>
        </td>

        <td>
          <%= pose.english_name %>
        </td>

        <td>
          <%= pose.sanksrit %>
        </td>

        <td>
          <% if pose.flow.present? %>
            <a href="/yoga_flows/<%= pose.flow.id %>">
              <%= pose.flow.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= pose.picture %>
        </td>

        <td>
          <% if pose.sun_a.present? %>
            <a href="/sun_as/<%= pose.sun_a.id %>">
              <%= pose.sun_a.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if pose.sun_b.present? %>
            <a href="/sun_bs/<%= pose.sun_b.id %>">
              <%= pose.sun_b.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if pose.sun_c.present? %>
            <a href="/sun_cs/<%= pose.sun_c.id %>">
              <%= pose.sun_c.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(pose.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(pose.updated_at) %> ago
        </td>

        <td>
          <a href="/poses/<%= pose.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @poses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
