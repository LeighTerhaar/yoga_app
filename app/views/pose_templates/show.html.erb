<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pose #<%= @pose.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/poses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/poses/<%= @pose.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit pose
        </a>
      </div>

      <div class="col">
        <a href="/delete_pose/<%= @pose.id %>" class="btn btn-block btn-outline-secondary">
          Delete pose
        </a>
      </div>
    </div>

    <dl>
      <dt>
        English name
      </dt>
      <dd>
        <%= @pose.english_name %>
      </dd>

      <dt>
        Sanksrit
      </dt>
      <dd>
        <%= @pose.sanksrit %>
      </dd>

      <dt>
        Sequence
      </dt>
      <dd>
        <% if @pose.flow.present? %>
          <a href="/yoga_flows/<%= @pose.sequence_id %>">
            <%= @pose.flow.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Picture
      </dt>
      <dd>
        <%= @pose.picture %>
      </dd>

      <dt>
        Sun a
      </dt>
      <dd>
        <% if @pose.sun_a.present? %>
          <a href="/sun_as/<%= @pose.sun_a_id %>">
            <%= @pose.sun_a.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Sun b
      </dt>
      <dd>
        <% if @pose.sun_b.present? %>
          <a href="/sun_bs/<%= @pose.sun_b_id %>">
            <%= @pose.sun_b.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Sun c
      </dt>
      <dd>
        <% if @pose.sun_c.present? %>
          <a href="/sun_cs/<%= @pose.sun_c_id %>">
            <%= @pose.sun_c.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@pose.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@pose.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

