<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Poses

    <a data-toggle="collapse" href="#sun_c_poses_new_form">
      Add pose
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @sun_c.poses.each do |pose| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/poses/<%= pose.id %>">
          <%= pose.english_name %>
        </a>

        <a href="/delete_pose_from_sun_c/<%= pose.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="sun_c_poses_new_form">
        <%= render partial: "sun_c_templates/sun_c_poses_new_form" %>
      </div>
    </div>

  </ul>
</div>
