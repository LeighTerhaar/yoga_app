<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All yoga flows
    </h1>

    <a href="/yoga_flows/new" class="btn btn-block btn-outline-secondary">
      Add a new yoga flow
    </a>
  </div>
</div>

<!-- Ransack Code start -->

